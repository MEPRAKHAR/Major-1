{
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "ecmaVersion": 2021,  // Allows modern ECMAScript syntax
      "sourceType": "module",  // Allows usage of imports and exports
      "ecmaFeatures": {
        "jsx": true  // Enables JSX
      },
      "requireConfigFile": false  // For Babel parser, you can run without a config file
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "plugins": ["react"],
    "rules": {
      "react/react-in-jsx-scope": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
  